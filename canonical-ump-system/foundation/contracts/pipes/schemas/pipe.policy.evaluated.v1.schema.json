{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "canon://vte/pipe.policy.evaluated.v1.schema.json",
    "title": "Policy Engine Evaluation Result",
    "description": "Pipe schema governing responses emitted by the Policy Engine after strict compliance evaluations.",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "event_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "timestamp_utc": {
                    "type": "string",
                    "format": "date-time"
                },
                "correlation_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "producer": {
                    "type": "string"
                },
                "schema_version": {
                    "type": "string",
                    "const": "1.0.0"
                }
            },
            "required": [
                "event_id",
                "timestamp_utc",
                "correlation_id",
                "producer",
                "schema_version"
            ],
            "additionalProperties": false
        },
        "data": {
            "type": "object",
            "properties": {
                "original_event_id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Links the outcome back to the request."
                },
                "policy_id": {
                    "type": "string"
                },
                "passed": {
                    "type": "boolean"
                },
                "reason": {
                    "type": "string"
                }
            },
            "required": [
                "original_event_id",
                "policy_id",
                "passed",
                "reason"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false
}