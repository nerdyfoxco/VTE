{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "canon://vte/pipe.evidence.ingested.v1.schema.json",
    "title": "Ingested Evidence Payload",
    "description": "Pipe schema emitting newly polled AppFolio/Gmail evidence to Brain infrastructure globally natively.",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "event_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "timestamp_utc": {
                    "type": "string",
                    "format": "date-time"
                },
                "correlation_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "producer": {
                    "type": "string"
                },
                "schema_version": {
                    "type": "string",
                    "const": "1.0.0"
                }
            },
            "required": [
                "event_id",
                "timestamp_utc",
                "correlation_id",
                "producer",
                "schema_version"
            ],
            "additionalProperties": false
        },
        "data": {
            "type": "object",
            "properties": {
                "evidence_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "source_system": {
                    "type": "string",
                    "enum": [
                        "appfolio_scraper",
                        "gmail_poller",
                        "test_mock"
                    ]
                },
                "payload": {
                    "type": "object"
                },
                "confidence_score": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "timestamp_ingested_utc": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "evidence_id",
                "source_system",
                "payload",
                "confidence_score",
                "timestamp_ingested_utc"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false
}