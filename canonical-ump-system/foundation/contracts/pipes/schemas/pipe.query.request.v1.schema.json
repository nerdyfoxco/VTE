{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "canon://vte/pipe.query.request.v1.schema.json",
    "title": "Query Read Request",
    "description": "Pipe schema mapping Orchestrator intents requesting read data structures from the Eyes query API natively.",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "event_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "timestamp_utc": {
                    "type": "string",
                    "format": "date-time"
                },
                "correlation_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "producer": {
                    "type": "string"
                },
                "schema_version": {
                    "type": "string",
                    "const": "1.0.0"
                }
            },
            "required": [
                "event_id",
                "timestamp_utc",
                "correlation_id",
                "producer",
                "schema_version"
            ],
            "additionalProperties": false
        },
        "data": {
            "type": "object",
            "properties": {
                "query_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "domain": {
                    "type": "string",
                    "enum": [
                        "tenant_ledger",
                        "communication_history",
                        "unit_status"
                    ]
                },
                "parameters": {
                    "type": "object"
                }
            },
            "required": [
                "query_id",
                "domain",
                "parameters"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "meta",
        "data"
    ],
    "additionalProperties": false
}