{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "pipe.workflow.step.completed.v1",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "meta",
        "data"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "event_id",
                "timestamp_utc",
                "correlation_id",
                "producer",
                "schema_version"
            ],
            "properties": {
                "event_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "timestamp_utc": {
                    "type": "string",
                    "format": "date-time"
                },
                "correlation_id": {
                    "type": "string"
                },
                "producer": {
                    "type": "string"
                },
                "schema_version": {
                    "type": "string"
                }
            }
        },
        "data": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "workflow_id",
                "step_id",
                "step_name",
                "status",
                "outputs"
            ],
            "properties": {
                "workflow_id": {
                    "type": "string"
                },
                "step_id": {
                    "type": "string"
                },
                "step_name": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "success",
                        "failure"
                    ]
                },
                "outputs": {
                    "type": "object",
                    "additionalProperties": true
                }
            }
        }
    }
}